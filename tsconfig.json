{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "paths": {
            "@netsocks/*": [
                "src/@netsocks/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es6"
    },
    "include": [
        "src/**/*.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}